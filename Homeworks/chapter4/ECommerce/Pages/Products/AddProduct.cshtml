@page "/Products/add"
@model ECommerce.Pages.Products.AddProductModel
@{
}
<form method="post">
    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input class="form-control" asp-for="Input.Name" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Price"></label>
        <input class="form-control" asp-for="Input.Price" />
        <span asp-validation-for="Input.Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
